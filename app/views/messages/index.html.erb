<div class="panel panel-default">
    <div class="panel panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message, class: 'form-horizontal') do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do | full_message | %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <!--
        <label class="col-sm-2 control-label">名前：</label>
        -->
        <%= f.label :name, '名前：', class: "col-sm-2 control-label" %>
        <!--<div class="col-sm-10">-->
            <%= f.text_field :name, class: "col-sm-10" %>
        <!--</div>-->
    </div>
    <div class="form-group">
        <!--<label class="col-sm-2 control-label">内容：</label>-->
        <%= f.label :body, '内容：', class: "col-sm-2 control-label" %>
        <!--<div class="col-sm-10">-->
            <%= f.text_area :body, class: "col-sm-10"%>
        <!--</div>-->
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <%= f.submit class: "btn btn-sm btn-primary btn-block" %>
        </div>
    </div>
    
<% end %>