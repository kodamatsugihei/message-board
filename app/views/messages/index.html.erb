<div class="panel panel-default">
    <div class="panel panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <table class="table table-hover">
            <tr class="success"><th>氏名</th><th>年齢</th><th>メッセージ</th><th>リンク</th></tr>
        <% @messages.each do |message| %>
            <tr><td><span class="label label-info"><%= message.name %></span></td>
            <td><%= message.age %></td>
            <td><%= message.body %></td>
            <td>(<%= link_to "edit", edit_message_path(message) %>
             <%= link_to "destroy", message , method: :delete, data: { confirm: '削除してもよろしいですか？'} %>
            )</td></tr>
            <!--<br>-->
        <% end %>
        </table>
    </div>
</div>

<% # 部分テンプレートを読み込んでいる %>
<%= render 'form' %>