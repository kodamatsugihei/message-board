<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do | full_message | %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2 control-label">
                <%= f.label :name, '名前：' %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2 control-label">
                <%= f.label :age, '年齢：' %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :age, class: "form-control"%>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2 control-label">
                <%= f.label :body, '内容：' %>
            </div>
            <div class="col-sm-10">
                <%= f.text_area :body, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-12">
                <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
            </div>
        </div>
    </div>
<% end %>