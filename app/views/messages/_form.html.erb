<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do | full_message | %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <!--<label class="col-sm-2 control-label">名前：</label>-->
        <div class="col-sm-2">
            <%= f.label :name, '名前：' %>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :name %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <%= f.label :age, '年齢：' %>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :age %>
        </div>
    </div>
    <div class="form-group">
        <!--<label class="col-sm-2 control-label">内容：</label>-->
        <div class="col-sm-2">
            <%= f.label :body, '内容：' %>
        </div>
        <div class="col-sm-10">
            <%= f.text_area :body %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
        </div>
    </div>
<% end %>